<views:ViewControl x:Class="TagPlugin.ExportTags.ExportTagsPromptView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Finkit.ManicTime.Client.Main.Views;assembly=Finkit.ManicTime.Client">
    <Border Style="{StaticResource ExternalWindowSection}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Text="{Binding MessagePrompt}" Padding="10"/>
            <DockPanel Grid.Row="1"  Style="{StaticResource BottomCommandButtonsExternalWindow}">
                <Button DockPanel.Dock="Right" IsCancel="True" Command="{Binding NoCommand}" Content="No" />
                <Button DockPanel.Dock="Right" Command="{Binding YesCommand}" Content="Yes" />
            </DockPanel>
        </Grid>
    </Border>
</views:ViewControl>